@model Invoice

@{
    ViewData["Title"] = "إنشاء فاتورة";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
    </div>

    <form asp-action="Create" id="invoiceForm">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-primary text-white">
                <h6 class="m-0 font-weight-bold">رأس الفاتورة</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CreatedAt" class="control-label">تاريخ الفاتورة</label>
                            <input asp-for="CreatedAt" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">نوع الفاتورة</label>
                            <select id="invoiceType" class="form-control">
                                <option value="cash">نقدي</option>
                                <option value="purchasing">شراء</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">نوع الحساب</label>
                            <select id="accountType" class="form-control">
                                <option value="customer">عميل</option>
                                <option value="supplier">مورد</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-primary text-white d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">تفاصيل الفاتورة</h6>
                <button type="button" id="addItemBtn" class="btn btn-success">
                    <i class="fas fa-plus"></i> إضافة منتج
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="invoiceItemsTable">
                        <thead class="bg-light">
                            <tr>
                                <th width="30%">المنتج</th>
                                <th width="10%">الكمية بالقطعة</th>
                                <th width="10%">الكمية بالكرتونة</th>
                                <th width="10%">سعة الكرتونة</th>
                                <th width="10%">سعر الشراء للقطعة</th>
                                <th width="10%">المجموع</th>
                                <th width="10%">إجراءات</th>
                            </tr>
                        </thead>
                        <tbody id="itemsContainer">
                            <!-- Items will be added here dynamically -->
                        </tbody>
                        <tfoot>
                            <tr class="font-weight-bold">
                                <td colspan="5" class="text-left">الإجمالي</td>
                                <td id="totalInvoiceAmount">0.00</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> حفظ الفاتورة
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> رجوع
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Product Search Modal -->
<div class="modal fade" id="productSearchModal" tabindex="-1" role="dialog" aria-labelledby="productSearchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="productSearchModalLabel">بحث عن منتج</h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" id="productSearchInput" class="form-control" placeholder="ابحث عن منتج بالاسم أو الرقم..." />
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered" id="productsTable">
                        <thead>
                            <tr>
                                <th>الصورة</th>
                                <th>الاسم</th>
                                <th>السعر</th>
                                <th>الكمية المتاحة</th>
                                <th>اختيار</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Products will be loaded here -->
                            @if (ViewBag.Products.Count > 0)
                            {
                                // Loop through each product and add to the table
                                @foreach (Product product in ViewBag.Products)
                                {
                                    <tr>
                                        <td>
                                            @if (product.ImageUrl == null)
                                            {
                                                <i class="fas fa-box-open fa-2x text-secondary"></i>
                                            }
                                            else
                                            {
                                                <img src="@product.ImageUrl" width="50" height="50" />
                                            }
                                        </td>
                                        <td>@product.Name</td>
                                        <td>@product.AveragePurchasePrice</td>
                                        <td>@product.StockQuantity</td>
                                        <td>
                                            <button class="btn btn-primary select-product"
                                                    data-id="@product.Id"
                                                    data-name="@product.Name"
                                                    data-price="@product.AveragePurchasePrice"
                                                    data-image="@product.ImageUrl">
                                                اختيار
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                                            else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">لا توجد منتجات متاحة</td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="productSearchModal">إغلاق</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add new item row
            $('#addItemBtn').click(function () {
                addNewItemRow();
            });

            // Initialize with one empty row
            addNewItemRow();

            function addNewItemRow() {
                var rowCount = $('#itemsContainer tr').length;
                var newRow = `
                    <tr data-row-index="${rowCount}">
                        <td>
                            <div class="input-group">
                                <input type="text" class="form-control product-search" placeholder="ابحث عن منتج..." readonly />
                                <input type="hidden" class="product-id" name="Items[${rowCount}].ProductId" />
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary product-search-btn" type="button">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="product-info mt-2 d-none">
                                <img src="" class="product-image img-thumbnail" width="50" height="50" />
                                <span class="product-name"></span>
                            </div>
                        </td>
                        <td>
                            <input type="number" min="0" step="1" class="form-control piece-quantity" name="Items[${rowCount}].Quantity" value="0" />
                        </td>
                        <td>
                            <input type="number" min="0" step="1" class="form-control box-quantity" value="0" />
                        </td>
                        <td>
                            <input type="number" min="1" step="1" class="form-control box-capacity" value="1" />
                        </td>
                        <td>
                            <input type="number" min="0" step="0.01" class="form-control unit-price" name="Items[${rowCount}].UnitPurchasingPrice" readonly />
                        </td>
                        <td>
                            <input type="number" class="form-control item-total" readonly />
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm remove-item">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                $('#itemsContainer').append(newRow);
            }

            // Product search functionality
            $(document).on('click', '.product-search-btn', function () {
                var currentRow = $(this).closest('tr');
                $('#productSearchModal').data('current-row', currentRow).modal('show');

                // Load products (you would typically make an AJAX call here)
                // loadProducts();
            });

            // Select product from modal
            $(document).on('click', '.select-product', function () {
                var productId = $(this).data('id');
                var productName = $(this).data('name');
                var productPrice = $(this).data('price');
                var productImage = $(this).data('image');

                var currentRow = $('#productSearchModal').data('current-row');

                currentRow.find('.product-search').val(productName);
                currentRow.find('.product-id').val(productId);
                currentRow.find('.unit-price').val(productPrice);
                currentRow.find('.product-info').removeClass('d-none');
                currentRow.find('.product-name').text(productName);
                currentRow.find('.product-image').attr('src', productImage);

                $('#productSearchModal').modal('hide');

                // Calculate total for this row
                calculateRowTotal(currentRow);
            });

            // Calculate row total when quantities change
            $(document).on('change', '.piece-quantity, .box-quantity, .box-capacity', function () {
                var currentRow = $(this).closest('tr');
                calculateRowTotal(currentRow);
            });

            function calculateRowTotal(row) {
                var pieceQuantity = parseFloat(row.find('.piece-quantity').val()) || 0;
                var boxQuantity = parseFloat(row.find('.box-quantity').val()) || 0;
                var boxCapacity = parseFloat(row.find('.box-capacity').val()) || 1;
                var unitPrice = parseFloat(row.find('.unit-price').val()) || 0;

                var totalQuantity = (boxQuantity * boxCapacity) + pieceQuantity;
                var totalPrice = totalQuantity * unitPrice;

                row.find('.item-total').val(totalPrice.toFixed(2));

                // Update invoice total
                calculateInvoiceTotal();
            }

            function calculateInvoiceTotal() {
                var total = 0;
                $('#itemsContainer tr').each(function () {
                    var rowTotal = parseFloat($(this).find('.item-total').val()) || 0;
                    total += rowTotal;
                });

                $('#totalInvoiceAmount').text(total.toFixed(2));
            }

            // Remove item row
            $(document).on('click', '.remove-item', function () {
                $(this).closest('tr').remove();
                calculateInvoiceTotal();

                // Reindex rows (important for model binding)
                $('#itemsContainer tr').each(function (index) {
                    $(this).attr('data-row-index', index);
                    $(this).find('[name*="ProductId"]').attr('name', `Items[${index}].ProductId`);
                    $(this).find('[name*="Quantity"]').attr('name', `Items[${index}].Quantity`);
                    $(this).find('[name*="UnitPurchasingPrice"]').attr('name', `Items[${index}].UnitPurchasingPrice`);
                });
            });

            // Product search in modal
            $('#productSearchInput').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#productsTable tbody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

                    <style>
    /* Invoice specific styles */
    .card {
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }

    .table th {
        font-weight: 600;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }

    .product-image {
        border-radius: 0.25rem;
        margin-left: 10px;
    }

    .product-info {
        display: flex;
        align-items: center;
    }

    .form-control:read-only {
        background-color: #f8f9fa;
    }

    /* RTL specific adjustments */
    .form-control, .btn {
        text-align: right;
    }

    .input-group-append {
        margin-right: -1px;
        margin-left: 0;
    }

    .input-group-prepend {
        margin-left: -1px;
        margin-right: 0;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .table-responsive

    {
        display: block;
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .card-body {
        padding: 0.75rem;
    }

    }
                    </style>