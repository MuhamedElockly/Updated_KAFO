@model KAFO.Domain.Invoices.Invoice

@{
    ViewData["Title"] = "حذف الفاتورة";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">تأكيد حذف الفاتورة #@Model.Id</h4>
                </div>
                <div class="card-body">
                    <partial name="_InvoiceDetailsPartial" model="Model" />

                    <div class="alert alert-danger mt-4">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> تحذير!</h5>
                        <p class="mb-0">هل أنت متأكد من رغبتك في حذف هذه الفاتورة؟ سيتم حذف جميع البيانات المرتبطة بها ولا يمكن استرجاعها لاحقاً.</p>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-2"></i> رجوع لقائمة الفواتير
                    </a>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i> تأكيد الحذف
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>