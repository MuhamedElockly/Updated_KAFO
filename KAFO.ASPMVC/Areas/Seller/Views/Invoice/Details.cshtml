@model Invoice

@{
    ViewData["Title"] = "تفاصيل الفاتورة";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <partial name="_InvoiceDetailsPartial" model="Model" />

            <div class="card shadow-sm">
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-2"></i> رجوع للقائمة
                    </a>
                    <div>
                        <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-print me-2"></i> طباعة الفاتورة
                        </a>

                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">
                            <i class="fas fa-trash me-2"></i> حذف الفاتورة
                        </a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table thead th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .card-footer {
        border-radius: 0 0 10px 10px;
    }
</style>
