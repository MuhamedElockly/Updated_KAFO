@model KAFO.Domain.Invoices.Invoice

@{
    ViewData["Title"] = "تفاصيل الفاتورة";
    Layout = "_Layout";
}

<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="card">
        <div class="card-body">
            <partial name="_InvoiceDetailsPartial" model="Model" />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <label class="form-label">صورة الفاتورة الورقية:</label>
                    <img src="@Model.ImageUrl" alt="صورة الفاتورة" class="img-thumbnail" style="max-width:300px; max-height:300px;" />
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-2"></i> رجوع للقائمة
                    </a>
                    <div>
                      @*   <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-print me-2"></i> طباعة الفاتورة
                        </a> *@
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table thead th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .card-footer {
        border-radius: 0 0 10px 10px;
    }
</style>
