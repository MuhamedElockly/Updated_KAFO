@model UsersTableVM
<div class="card mb-4" id="sellers-management">
	<div class="card-header bg-white">
		<div class="d-flex justify-content-between align-items-center">
			<h4 class="mb-0">إدارة المستخدمين</h4>
			<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSellerModal">
				<i class="fas fa-plus"></i> إضافة مستخدم جديد
			</button>
		</div>
	</div>
	<div class="card-body">
		<div class="input-group mb-3">
			<span class="input-group-text"><i class="fas fa-search"></i></span>
			<input type="text" class="form-control" placeholder="البحث عن المستخدمين بالاسم، البريد الإلكتروني، أو الدور...">
		</div>
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>الاسم</th>
						<th>رقم الموبايل</th>
						<th>البريد الإلكتروني</th>
						<th>الدور</th>
						<th>الإجراءات</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var seller in Model.Users)
					{
						<tr>
							<td>@seller.Id</td>
							<td>@seller.Name</td>
							<td>@seller.Phone</td>
							<td>@(seller.Email ?? "لا يوجد بريد الكتروني")</td>
							<td>@seller.Role</td>
							<td>
								<button class="btn btn-sm btn-info" onclick="editSeller(@seller.Id)">
									<i class="fas fa-edit"></i>
								</button>
								<button class="btn btn-sm btn-danger" onclick="deleteSeller(@seller.Id)">
									<i class="fas fa-trash"></i>
								</button>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<nav>
			<ul class="pagination justify-content-end">
				<li class="page-item @(Model.CurrentUserPage == 1 ? "disabled" : "")">
					<a class="page-link" onclick="loadAdminContent('Users', @Model.CurrentUserPage-1)" tabindex="-1">السابق</a>
				</li>
				@for (int i = 1; i <= Model.TotalUsersPages; i++)
				{
					<li class="page-item @(i == Model.CurrentUserPage ? "active" : "")">
						<a class="page-link" onclick="loadAdminContent('Users', @i)">@i</a>
					</li>
				}
				<li class="page-item @(Model.CurrentUserPage == Model.TotalUsersPages ? "disabled" : "")">
					<a class="page-link" onclick="loadAdminContent('Users', @Model.CurrentUserPage+1)">التالي</a>
				</li>
			</ul>
		</nav>
	</div>
</div> 