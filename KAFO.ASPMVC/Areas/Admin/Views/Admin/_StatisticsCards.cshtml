@using KAFO.ASPMVC.Areas.Admin.ViewModels
@model AdminHomeVM
<!DOCTYPE html>

<html lang="en" dir="rtl">
<body>
	<div class="row mb-4">
		<div class="col-md-4">
			<div class="card bg-primary text-white">
				<div class="card-body d-flex justify-content-between align-items-center">
					<div>
						<h5 class="card-title">إجمالي الأرباح اليوم</h5>
						<h2 class="card-text">@Model.TotalProfitToday جنيه</h2>
					</div>
					<i class="fas fa-chart-line fa-3x"></i>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card bg-success text-white">
				<div class="card-body d-flex justify-content-between align-items-center">
					<div>
						<h5 class="card-title">إجمالي المبيعات اليوم</h5>
						<h2 class="card-text">@Model.TotalSellsToday جنيه</h2>
					</div>
					<i class="fas fa-shopping-cart fa-3x"></i>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card bg-info text-white">
				<div class="card-body d-flex justify-content-between align-items-center">
					<div>
						<h5 class="card-title">المنتجات المباعة اليوم</h5>
						<h2 class="card-text">@Model.TotalProductSoldToday منتج</h2>
					</div>
					<i class="fas fa-box fa-3x"></i>
				</div>
			</div>
		</div>
	</div>
</body>
</html>