                                <i class="fas fa-save me-2"></i>حفظ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            // Password visibility toggle
            document.querySelectorAll('.toggle-password').forEach(button => {
                button.addEventListener('click', function () {
                    const input = this.parentElement.querySelector('input');
                    const icon = this.querySelector('i');
                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.replace('fa-eye', 'fa-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.replace('fa-eye-slash', 'fa-eye');
                    }
                });
            });

            // Toggle password fields for update
            $('#changePasswordCheckbox').change(function() {
                if (this.checked) {
                    $('.password-section').show();
                    $('#Password').attr('data-val', 'true');
                    $('#Password').attr('data-val-required', 'كلمة المرور مطلوبة');
                    $('#ConfirmPassword').attr('data-val', 'true');
                    $('#ConfirmPassword').attr('data-val-required', 'تأكيد كلمة المرور مطلوب');
                    $('#ConfirmPassword').attr('data-val-equalto', 'كلمة المرور غير متطابقة');
                } else {
                    $('.password-section').hide();
                    $('#Password').val('').removeAttr('data-val').removeAttr('data-val-required');
                    $('#ConfirmPassword').val('').removeAttr('data-val').removeAttr('data-val-required').removeAttr('data-val-equalto');
                }
                $.validator.unobtrusive.parse("#userForm");
            });

            // Initialize validation
            $("#userForm").validate({
                errorClass: "is-invalid",
                validClass: "is-valid",
                errorElement: "span",
                errorPlacement: function (error, element) {
                    error.addClass("text-danger small");
                    error.insertAfter(element);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass(errorClass).removeClass(validClass);
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass(errorClass).addClass(validClass);
                },
                ignore: ":hidden:not(.password-section :input)"
            });

            // Custom validation for phone number
            $.validator.addMethod("exactLength", function(value, element, param) {
                return this.optional(element) || value.length == param;
            }, "Please enter exactly {0} characters.");

            $("[data-val-length]").each(function() {
                var $this = $(this);
                var length = $this.attr("data-val-length-max");
                $this.rules("add", {
                    exactLength: length,
                    messages: {
                        exactLength: $this.attr("data-val-length")
                    }
                });
            });
        });
    </script>
}

