                                <div class="col-md-6 mb-3">
                                    <label asp-for="Password" class="form-label text-muted mb-2 fs-6 required-field">
                                        <i class="fas fa-lock me-3"></i>كلمة المرور
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password"
